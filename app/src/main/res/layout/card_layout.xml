<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_View"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/colorFondo"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/item_NombreProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NobreProducto"
            android:textColor="@color/black"
            android:fontFamily="@font/comfortaaregular"
            android:textSize="15dp"
            android:layout_toEndOf="@id/item_image"
            android:layout_toRightOf="@id/item_image"
            android:layout_alignParentTop="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripcionProducto"
            android:textColor="@color/black"
            android:fontFamily="@font/comfortaaregular"
            android:textSize="15dp"
            android:layout_toEndOf="@id/item_image"
            android:layout_toRightOf="@id/item_image"
            android:layout_below="@id/item_NombreProduto"/>

        <TextView
            android:id="@+id/item_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrecioProducto"
            android:textColor="@color/black"
            android:fontFamily="@font/comfortaaregular"
            android:textSize="15dp"
            android:layout_toEndOf="@id/item_image"
            android:layout_toRightOf="@id/item_image"
            android:layout_below="@id/item_descripcion"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>