<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    tools:context=".view.DatosCuentaFragment">

    <ScrollView
        android:id="@+id/idScrollCuenta"
        android:layout_width="459dp"
        android:layout_height="786dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/fotoUsuario"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:src="@drawable/caramelo"></ImageView>

            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparente"
                android:contentDescription="null"
                android:src="@drawable/editar"></ImageButton>

            <TextView
                android:id="@+id/datoNombre"
                android:layout_width="369dp"
                android:layout_height="50dp"
                android:fontFamily="@font/comfortaabold"
                android:textColor="@color/black"></TextView>

            <TextView
                android:layout_width="372dp"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/comfortaabold"
                android:text="Datos de la cuenta"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/comfortaabold"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/datoCorreo"
                android:layout_width="369dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"></TextView>

            <TextView
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/comfortaabold"
                android:textColor="@color/black"
                android:textSize="16dp">
            </TextView>

            <TextView
                android:id="@+id/datoTelefono"
                android:layout_width="369dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"></TextView>

            <TextView
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/comfortaabold"
                android:textColor="@color/black"
                android:textSize="16dp">
            </TextView>

            <TextView
                android:id="@+id/datoFecha"
                android:layout_width="369dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"></TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cambiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparente"
                android:hint="cambiar contraseña"
                android:text="Cambiar contraseña"
                android:textColor="@color/red"
                android:textSize="14dp"
                app:cornerRadius="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="524dp" />


            <TextView
                android:layout_width="372dp"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/comfortaabold"
                android:text="Direcciones"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/lv_Direcciones"
                android:layout_width="387dp"
                android:layout_height="423dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Agregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparente"
                android:hint="agregarDireccion"
                android:text="Agregar Dirección"
                android:textColor="@color/red"
                android:textSize="14dp"
                app:cornerRadius="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="524dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>